<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WheelView">
        <attr name="wv_selectType">
            <enum name="date" value="1" />
            <enum name="string" value="0" />
        </attr>

        <attr name="wv_date_type">
            <enum name="year" value="1" />
            <enum name="month" value="2" />
            <enum name="day" value="3" />
        </attr>

        <!--        文字选择的时候有效-->
        <attr name="wv_string_select_text_size" format="dimension|reference" />

        <!-- 中间分割线外的item数量,整个滑动数量就为 wheelItemCount * 2 + 1  -->
        <attr name="wv_wheelItemCount" format="integer" />
        <!-- 滑轮item高度 -->
        <attr name="wv_wheelItemSize" format="dimension" />
        <!-- 分割线颜色 -->
        <attr name="wv_dividerColor" format="color" />
        <!-- 布局方向 -->
        <attr name="wv_wheelOrientation">
            <enum name="vertical" value="1" />
            <enum name="horizontal" value="0" />
        </attr>
        <!-- 水平布局时不考虑只参数,  当垂直布局时的左右靠齐立体效果 -->
        <attr name="wv_wheelGravity">
            <enum name="left" value="1" />
            <enum name="center" value="2" />
            <enum name="right" value="3" />
        </attr>

        <!-- 两根分割线的距离 -->
        <attr name="wv_wheelDividerSize" format="dimension" />

    </declare-styleable>

</resources>